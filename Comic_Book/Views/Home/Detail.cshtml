@model Comic_Book.Models.Manga

@{
    ViewData["Title"] = "Detail";
}


<h2>@Model.title</h2>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            <h5><label>Series Title:</label> @Model.title</h5>
            <h5><label>Favorite:</label> @(Model.favorite ? "Yes" : "No")</h5>
            <h5>Characters: </h5>
            <div>
                <ul>
                @foreach (var character in Model.characters)
                {
                    <li>@character</li>

                }
                </ul>
            </div>
        </div>
        <h5>Summary</h5>
        <div>@Html.Raw(Model.summary)</div>
    </div>
    <div class="col-md-6">
        <img src="/images/@Model.CoverImageFilename" 
            alt="@Model.title" class="img-responsive" />
    </div>
</div>